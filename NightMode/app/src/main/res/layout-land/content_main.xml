<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_main" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rect_colored"
        android:orientation="vertical"
        android:background="@color/primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"
            android:id="@+id/app_isenabled"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:fontFamily="sans-serif-light"
            android:textColor="@android:color/white"
            android:id="@+id/start_time"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="2dp"
            android:background="@color/cardview_light_background"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:clickable="true"
                    android:background="@drawable/list_item_background_card"
                    android:id="@+id/action_wifi">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_wifi_preferences"
                        android:id="@+id/wifi_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/wifi_subtitle"
                        android:text="@string/subtitle_wifi_preferences"
                        android:layout_below="@+id/wifi_title" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_select"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/list_item_background_card"
                    android:clickable="true"
                    android:id="@+id/action_bluetooth">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_bluetooth_preferences"
                        android:id="@+id/bluetooth_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/bluetooth_subtitle"
                        android:text="@string/subtitle_bluetooth_preferences"
                        android:layout_below="@+id/bluetooth_title" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_select"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/list_item_background_card"
                    android:clickable="true"
                    android:id="@+id/action_alarm">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_alarm_preferences"
                        android:id="@+id/alarm_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/alarm_subtitle"
                        android:text="@string/subtitle_alarm_preferences"
                        android:layout_below="@+id/alarm_title" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>
