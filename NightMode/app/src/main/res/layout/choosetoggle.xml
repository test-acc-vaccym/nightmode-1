<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_choosetoggle" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.nego.nightmode.ToggleSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background_card"
            android:clickable="true"
            android:id="@+id/action_wifi">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_wifi_preferences"
                android:id="@+id/wifi_title"
                android:layout_toLeftOf="@+id/wifi_check"
                android:layout_toStartOf="@+id/wifi_check" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:id="@+id/wifi_subtitle"
                android:text="@string/subtitle_wifi_preferences"
                android:layout_below="@+id/wifi_title"
                android:layout_toLeftOf="@+id/wifi_check"
                android:layout_toStartOf="@+id/wifi_check" />
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wifi_check"
                android:checked="true"
                android:theme="@style/mDialog"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_select"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background_card"
            android:clickable="true"
            android:id="@+id/action_bluetooth">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_bluetooth_preferences"
                android:id="@+id/bluetooth_title"
                android:layout_toLeftOf="@+id/bluetooth_check"
                android:layout_toStartOf="@+id/bluetooth_check" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:id="@+id/bluetooth_subtitle"
                android:text="@string/subtitle_bluetooth_preferences"
                android:layout_below="@+id/bluetooth_title"
                android:layout_toLeftOf="@+id/bluetooth_check"
                android:layout_toStartOf="@+id/bluetooth_check" />
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bluetooth_check"
                android:checked="true"
                android:theme="@style/mDialog"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_select"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background_card"
            android:clickable="true"
            android:id="@+id/action_alarm">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_alarm_preferences"
                android:id="@+id/alarm_title"
                android:layout_toLeftOf="@+id/alarm_check"
                android:layout_toStartOf="@+id/alarm_check" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:id="@+id/alarm_subtitle"
                android:text="@string/subtitle_alarm_preferences"
                android:layout_below="@+id/alarm_title"
                android:layout_toLeftOf="@+id/alarm_check"
                android:layout_toStartOf="@+id/alarm_check" />
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_check"
                android:checked="true"
                android:theme="@style/mDialog"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_select"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background_card"
            android:clickable="true"
            android:id="@+id/action_alarm_level">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_alarm_level_preferences"
                android:id="@+id/alarm_level_title" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:id="@+id/alarm_level_subtitle"
                android:text="@string/subtitle_alarm_level_preferences"
                android:layout_below="@+id/alarm_level_title" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_select"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background_card"
            android:clickable="true"
            android:id="@+id/action_silent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_silent_preferences"
                android:id="@+id/silent_title"
                android:layout_toLeftOf="@+id/silent_check"
                android:layout_toStartOf="@+id/silent_check" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:id="@+id/silent_subtitle"
                android:text="@string/subtitle_silent_preferences"
                android:layout_below="@+id/silent_title"
                android:layout_toLeftOf="@+id/silent_check"
                android:layout_toStartOf="@+id/silent_check" />
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/silent_check"
                android:checked="true"
                android:theme="@style/mDialog"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_select"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/list_item_background_card"
            android:clickable="true"
            android:id="@+id/action_screen">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_screen_preferences"
                android:id="@+id/screen_title"
                android:layout_toLeftOf="@+id/screen_check"
                android:layout_toStartOf="@+id/screen_check" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:id="@+id/screen_subtitle"
                android:text="@string/subtitle_screen_preferences"
                android:layout_below="@+id/screen_title"
                android:layout_toLeftOf="@+id/screen_check"
                android:layout_toStartOf="@+id/screen_check" />
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/screen_check"
                android:checked="true"
                android:theme="@style/mDialog"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>